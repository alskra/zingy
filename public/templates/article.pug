extends index

include chunks/sticky-container-layout
include components/AppArticle

append vars
	-
		title = 'Статья';

block app
	app-page(inline-template)
		+AppPage()
			a.link-backward(
				v-if="linkBackwardShown"
				href="blog.html"
			) Вернуться в блог

			transition-box
				a.link-up(
					v-if="linkUpShown"
					href="#"
				)
					base-icon.link-up-icon(name="angle-left")

			.grid
				nav.app-page-breadcrumb(is="app-breadcrumb")
					a(href="index.html") Главная
					a(href="blog.html") Блог
					| Статья

				+sticky-container-layout()
					app-article.app-page-article(inline-template)
						+AppArticle()
