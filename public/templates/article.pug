extends index

include chunks/sticky-container-layout
include components/AppArticle

append vars
	-
		title = 'Статья';

block app
	app-page(inline-template)
		+AppPage()
			a.link-backward(
				v-if="linkBackwardShown"
				href="blog.html"
			) Вернуться в блог

			transition-box
				a.link-up(
					v-if="linkUpShown"
					href="#"
				)
					base-icon.link-up-icon(name="angle-left")

			.grid
				+AppBreadcrumb([['Главная', 'index.html'], ['Блог', 'blog.html'], ['Статья', 'article.html']]).app-page-breadcrumb

				+sticky-container-layout()
					app-article.app-page-article(inline-template)
						+AppArticle()

			content-section.app-page-content-section
				h2.
					Контентный блок

				p.
					Для эксплуатации бани главным требованием будет сохранение тепла и пара внутри помещения,
					беспроблемное использование в условиях повышенной влажности. Важно предусмотреть хорошую
					гидроизоляцию, что предупредит преждевременный износ здания.

				p.
					На собственном участке обязательно стоит выделить место под уютную баньку или сауну.
					Это место отдыха и встреч с друзьями, дружных посиделок и лечебных процедур.
					При обустройстве особое внимание уделяется отделке бани внутри.
