extends index

include chunks/sticky-container-layout
include components/BlogPosts

append vars
	-
		title = 'Блог';

block app
	app-page.theme-dark(inline-template)
		+AppPage()
			.grid
				nav.app-page-breadcrumb(is="app-breadcrumb")
					a(href="index.html") Главная
					| Блог

				h1.app-page-title(
					is="base-title"
					tag="h1"
				) Блог с&nbsp;полезным контентом для всех, #[br]кто интересуется IT

				+sticky-container-layout()
					blog-posts.app-page-blog-posts(inline-template)
						+BlogPosts()
