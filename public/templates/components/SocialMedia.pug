mixin SocialMedia()
	-
		const mediaList = [
			'VK',
			'Facebook',
			'Twitter',
			'Google+',
			'Instagram'
		]

	template
		nav.SocialMedia&attributes(attributes)
			.l-grid
				each mediaItem in mediaList
					.l-grid-item
						a.media-item(
							href=""
							title=mediaItem
							target="_blank"
						)
							base-icon(icon-name=mediaItem.toLowerCase())
