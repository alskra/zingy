	template
		.blog-posts&attributes(attributes)
			.grid
				.grid-row
					each post in posts
						.grid-cell(class={'grid-cell-is-large': post.isLarge})
							article.post(
								is="posts-item"
								:post=`{
									color: '${post.color}',
									backgroundColor: '${post.backgroundColor}',
									isLarge: ${post.isLarge}
								}`
							)
								img.img(
									slot="img"
									is="v-lazy-image"
									src=post.img || 'upload/zingy.svg'
									alt=post.title
									class={'img-is-zingy': !post.img}
								)

								time.date(
									slot="date"
									is="base-time"
									datetime=post.date
								)

								p(slot="title")=post.title
								div(slot="desc")!=post.desc

								a.link(
									slot="link"
									href=post.url
									title=post.title
								)

			nav.pagination(is="app-pagination")
