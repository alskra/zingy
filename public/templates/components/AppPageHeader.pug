mixin AppPageHeader()
	template
		header.app-page-header&attributes(attributes)
			transition(
				appear
				appear-active-class="v-appear-active"
				:duration="600"
			)
				.logobox
					a.logo(
						href="/"
						title="Zingy Projects"
					)
						base-icon(icon-name="zingy")

			transition
				.menubuttonbox
					button.menubutton(type="button")
						base-icon(icon-name="menu")
