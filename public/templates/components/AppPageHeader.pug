mixin AppPageHeader()
	template
		header.AppPageHeader&attributes(attributes)
			transition-box(
				appear
				appear-active-class="v-appear-active"
				:duration="600"
				@after-appear="startAnimateIsEnd = true"
			)
				.l-logo-box
					a.logo(
						href="/"
						title="Zingy Projects"
					)
						base-icon(icon-name="zingy")

			transition-box(
				:duration="{enter: 500, leave: 300}"
				@enter="onLNavBoxEnter"
				@after-enter="onLNavBoxAfterEnter"
				@before-leave="onLNavBoxBeforeLeave"
			)
				.l-nav-box(v-show="startAnimateIsEnd && !headerIsMinimized")
					app-page-header-nav-is-top(class="AppPageHeaderNavIsTop")

			transition-box(:duration="{enter: 550, leave: 350}")
				.l-menu-button-box(v-show="startAnimateIsEnd && headerIsMinimized")
					button.menu-button(
						type="button"
						@click="sidebarIsOpened = !sidebarIsOpened"
					)
						base-icon(
							icon-name="menu"
							:class="{'is-sidebar-opened': sidebarIsOpened}"
						)

			transition-box(
				:duration="{enter: 500, leave: 300}"
				@enter="onLRightPanelBoxEnter"
				@after-enter="onLRightPanelBoxAfterEnter"
				@before-leave="onLRightPanelBoxBeforeLeave"
			)
				.l-right-panel-box(v-show="startAnimateIsEnd && !headerIsMinimized")
					.right-panel
						.l-right-panel-grid
							.l-right-panel-grid-item
								a(href="").link
									base-icon(icon-name="globe").link-icon
									.link-text.is-uppercase Eng

							.l-right-panel-grid-item
								a(href="tel:+79854575817").link
									base-icon(icon-name="phone").link-icon
									.link-text +7 985 457 58 17

							.l-right-panel-grid-item
								base-button.button(
									tag="a"
									href=""
								)
									template(v-slot:icon)
										span.icon

									| Начать проект

			transition-group.sidebar-box(
				tag="div"
				:duration="{enter: 600, leave: 600}"
			)
				.sidebar-backdrop(
					v-if="sidebarIsOpened"
					@click="sidebarIsOpened = false"
					key="1"
				)

				.sidebar(
					v-if="sidebarIsOpened"
					key="2"
				)
					.sidebar-lang-box
						a(href="").link
							base-icon(icon-name="globe").link-icon
							.link-text.is-uppercase Eng

					.sidebar-scrollable
						app-page-header-nav-is-aside.sidebar-nav(class="AppPageHeaderNavIsAside")

						.sidebar-footer
							.sidebar-footer-grid
								.sidebar-footer-grid-item
									base-button.is-full-width.button(
										tag="a"
										href=""
									)
										template(v-slot:icon)
											span.icon

										| Начать проект

								.sidebar-footer-grid-item
									a(href="tel:+79854575817").link
										base-icon(icon-name="phone").link-icon
										.link-text +7 985 457 58 17

								.sidebar-footer-grid-item
									a(href="mailto:zingy.projects@gmail.com").link
										base-icon(icon-name="envelope").link-icon
										.link-text zingy.projects@gmail.com


