include AppHeader
include AppFooter
include ZingySection

mixin AppPage()
	template
		.app-page&attributes(attributes)
			.body(ref="body")
				app-header.header(inline-template)
					+AppHeader()

				main.main
					block

				app-footer.footer(inline-template)
					+AppFooter()

			zingy-section.section(inline-template)
				+ZingySection()
