include SocialMedia
include PageFooterNav

mixin page-footer()
	-
		const data = {
			navMain: [
				'Главная',
				'Разработка',
				'Провижение',
				'О компании',
				'Блог',
				'Цены',
				'Контакты'
			],
			navDev: [
				'Разработка сайта-визитки',
				'Разработка интернет-магазина',
				'Разработка корпоративного сайта',
				'Разработка сайта на 1С-Битрикс',
				'Разработка промо-сайта',
				'Разработка личного кабинета',
				'Разработка веб-дизайна',
				'Интеграция'
			],
			navSeo: [
				'Продвижение по трафику',
				'Продвижение по запросам',
				'Провижение по лидам',
				'Вывод из-под санкций',
				'Контекстная реклама',
				'SEO продвижение'
			]
		}

	page-footer(inline-template)&attributes(attributes)
		footer.page-footer
			.content
				h2.heading Контакты
				.zingyprojects

				.boxgroup
					.box
						.boxgroup
							.box
								.text
									p E-mail: #[br]#[a(href="mailto:zingy.projects@gmail.com") zingy.projects@gmail.com]
									p Телефон: #[br]#[a(href="tel:+79854575817") +7 (985) 457-58-17]

							.box
								+social-media().-justify-center

							.box
								.text.-copyright
									p &copy;&nbsp;2008&ndash;2019. Все&nbsp;права&nbsp;защищены

					.box
						+page-footer-nav(data.navMain).-main

					.box
						+page-footer-nav(data.navDev, 'Разработка').-section(hover)

					.box
						+page-footer-nav(data.navSeo, 'Продвижение').-section(hover)
