include SocialMedia

mixin page-footer()
	-
		const mainNav = [
			'Главная',
			'Разработка',
			'Провижение',
			'О компании',
			'Блог',
			'Цены',
			'Контакты'
		];

		const devNav = [
			'Разработка сайта-визитки',
			'Разработка интернет-магазина',
			'Разработка корпоративного сайта',
			'Разработка сайта на 1С-Битрикс',
			'Разработка промо-сайта',
			'Разработка личного кабинета',
			'Разработка веб-дизайна',
			'Интеграция'
		];

		const seoNav = [
			'Продвижение по трафику',
			'Продвижение по запросам',
			'Провижение по лидам',
			'Вывод из-под санкций',
			'Контекстная реклама',
			'SEO продвижение'
		];

	page-footer(inline-template)&attributes(attributes)
		footer.page-footer
			.content-box
				h2.heading-box Контакты
				.zingy-projects

				.row
					.col
						.row
							.col
								.text-box
									p E-mail: #[a(href="mailto:zingy.projects@gmail.com") zingy.projects@gmail.com]
									p Телефон: #[a(href="tel:+79854575817") +7 (985) 457-58-17]

							.col
								+social-media().-justify-center

							.col
								.text-box.-copyright
									p &copy;&nbsp;2008&mdash;2019. Все&nbsp;права&nbsp;защищены

					.col
						.nav-box.-main
							.grid
								each item in mainNav
									.cell
										a.item(href="")= item

					.col
						.nav-box.-section(
							@mouseover="onNavBoxItemMouseOver"
							@mouseout="onNavBoxItemMouseOut"
						)
							.hover
							.grid
								each item in devNav
									.cell
										a.item(href="")= item

					.col
						.nav-box.-section(
							@mouseover="onNavBoxItemMouseOver"
							@mouseout="onNavBoxItemMouseOut"
						)
							.hover
							.grid
								each item in seoNav
									.cell
										a.item(href="")= item
