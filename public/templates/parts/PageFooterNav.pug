mixin page-footer-nav(navList = [], navName)
	page-footer-nav(inline-template)&attributes(attributes)
		.page-footer-nav(
			@mouseover="onNavBoxItemMouseOver"
			@mouseout="onNavBoxItemMouseOut"
		)
			if navName
				.name= navName

			transition
				.hover(
					v-if="hover"
					:style="hoverStyle"
				)

			.grid
				each item in navList
					.cell
						a.item(href="")= item
